<table id="datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
  <thead>
    <tr>
      <th><%= :id %></th>
      <th><%= :code %></th>
      <th><%= :monetary_value %></th>
      <th><%= :points %></th>
      <th><%= :expiration %></th>
      <th><%= :redeemed %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= link_to voucher.id, clerks_voucher_path(voucher) %></td>
        <td><%= voucher.code %></td>
        <td><%= voucher.monetary_value %></td>
        <td><%= voucher.points %></td>
        <td><%= voucher.expiration %></td>
        <td><%= voucher.redeemed %></td>
        <td>
          <%= link_to raw("#{t :view}"), clerks_voucher_path(voucher) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo Voucher", new_clerks_voucher_path %>

<script type="text/javascript">
  $(document).ready( function () {
    $('#datatable').DataTable({
      "language": {
        "url": "//cdn.datatables.net/plug-ins/f2c75b7247b/i18n/Portuguese-Brasil.json"
      },
      "bStateSave": true,
      "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
    });
  });
</script>