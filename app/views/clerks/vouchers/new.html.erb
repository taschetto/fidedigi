<h1><%= "#{t :new} #{t :voucher}" %></h1><br>
<%= simple_form_for @voucher, url: clerks_vouchers_path, html: { class: 'form-horizontal' },
      wrapper: :horizontal_form,
      wrapper_mappings: {
        check_boxes: :horizontal_radio_and_checkboxes,
        boolean: :horizontal_boolean
      } do |form| %>
      <%= form.input :monetary_value, as: :decimal, label: t("vouchers.monetary_value") %>
      <%= form.submit "Gerar Voucher", class: "btn btn-primary" %>
<% end %>