<h1><%= t "couponss" %></h1><br>

<table id="datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
  <thead>
    <tr>
      <th><%= t "coupons.id" %></th>
      <th><%= t "coupons.company" %></th>
      <th><%= t "coupons.promotion" %></th>
      <th><%= t "coupons.redeemed" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.id %></td>
        <td><%= coupon.promotion.company.name %></td>
        <td><%= coupon.promotion.title %></td>
        <td><%= coupon.redeemed %></td>
        <td>
          <%= link_to t("coupons.details"), coupon %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready( function () {
    $('#datatable').DataTable({
      "language": {
        "url": "//cdn.datatables.net/plug-ins/f2c75b7247b/i18n/Portuguese-Brasil.json"
      },
      "bStateSave": true,
      "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
    });
  });
</script>