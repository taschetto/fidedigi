<h1><%= t "pointsss" %> <%= @company.name %></h1><br>

<table id="datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
  <thead>
    <tr>
      <th><%= t "points.id" %></th>
      <th><%= t "points.balance" %></th>
      <th><%= t "points.expiration" %></th>
    </tr>
  </thead>
  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.id %></td>
        <td><%= point.balance %></td>
        <td><%= point.expiration %> (<%= (point.expiration - Date.today).to_i %> dias)</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t(:back), :back %>

<script type="text/javascript">
  $(document).ready( function () {
    $('#datatable').DataTable({
      "language": {
        "url": "//cdn.datatables.net/plug-ins/f2c75b7247b/i18n/Portuguese-Brasil.json"
      },
      "bStateSave": true,
      "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
    });
  });
</script>