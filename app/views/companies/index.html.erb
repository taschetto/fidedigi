<h1><%= t "companiess" %></h1><br>

<table id="datatable" class="table table-striped table-bordered table-hover dataTable no-footer">
  <thead>
    <tr>
      <th><%= t "companies.id" %></th>
      <th><%= t "companies.name" %></th>
      <th><%= t "companies.ratio" %></th>
      <th><%= t "companies.manager" %></th>
      <th><%= t "companies.minimum_value" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.ratio %></td>
        <td><%= company.manager.email %></td>
        <td><%= company.minimum_value %></td>
        <td>
          <%= link_to t("companies.promotions"), company_promotions_path(company) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready( function () {
    $('#datatable').DataTable({
      "language": {
        "url": "//cdn.datatables.net/plug-ins/f2c75b7247b/i18n/Portuguese-Brasil.json"
      },
      "bStateSave": true,
      "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Todos"]]
    });
  });
</script>