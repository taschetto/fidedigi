<div class="row">
  <div class="col-md-3"><img src="<%= @promotion.image %>"></div>
  <div class="col-md-9">
    <div class="row">
      <div class="col-md-12">
        <h3><small><%= t "company" %></small> <%= @promotion.company.name %></h3>
        <h3><small><%= t "companies.expiration" %> </small><%= @promotion.expiration %></h3>
        <h3><small><%= t "companies.value" %></small> <%= @promotion.value %></h3>
        <h3><small><%= t "companies.availability" %></small> <%= @promotion.availability %></h3>
        <h3><%= @promotion.title %></h3>
        <h3><%= @promotion.description %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <button class="btn btn-success btn-block" width="100%"><%= t "buy" %></button>
      </div>
    </div>
  </div>
</div>